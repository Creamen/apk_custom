# Contributor: BARON David <db@crea.mn>
# Maintainer: BARON David <db@crea.mn>
pkgname=peertube
pkgver=v0.1b
pkgrel=1
pkgdesc="PeerTube - Yet Another truc muche !"
url="https://github.com/Chocobozzz/PeerTube"
arch="x86_64"
license="GPLv2"
depends="nodejs=v9.2.0-r1 openssl"
depends_dev="git nodejs=v9.2.0-r1 yarn rsync bash"
makedepends="$depends_dev"
install=""
subpackages=""
builddir="$srcdir/$pkgname-$pkgver"

prepare() {
	cd "$srcdir"
	echo "Cloning ..."
	git clone -q --single-branch -b develop https://github.com/Chocobozzz/PeerTube $pkgname-$pkgver 2>/dev/null || return 1
}

build() {
	cd "$builddir"
	yarn install
	npm run build
}

check() {
	cd "$builddir"
}

dev() {
	cd "$builddir"
}

doc() {
	cd "$builddir"
}

package() {
	cd "$builddir"
	install -d "$pkgdir"/var/lib/peertube || return 1
	rsync -a . --exclude .git "$pkgdir"/var/lib/peertube || return 1
	chown -R nobody:nobody "$pkgdir"/var/lib/peertube || return 1
}

