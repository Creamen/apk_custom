# Contributor: BARON David <db@crea.mn>
# Maintainer: BARON David <db@crea.mn>
pkgname=openssl
pkgver=1.1.1_pre3
br_ver=1.1.1-pre3
pkgrel=666
pkgdesc="OpenSSL"
url="https://www.openssl.org"
arch="x86_64"
license="OpenSSL"
depends=""
depends_dev="linux-headers"
makedepends="$depends_dev"
install=""
subpackages=""
builddir="$srcdir/openssl-${br_ver}"

prepare() {
	cd "$srcdir/"
	curl -Ls https://www.openssl.org/source/openssl-${br_ver}.tar.gz | tar -xzf -
}

build() {
	cd "$builddir/"
	export CFLAGS="-O3 -march=native"
	./config no-async --prefix=/usr
	make -j16
}

check() {
	cd "$srcdir/"
}

dev() {
	cd "$srcdir/"
}

doc() {
	cd "$srcdir/"
}

package() {
	cd "$builddir/"
	make DESTDIR="$pkgdir/" install_sw install_ssldirs
}

