pkgname=courier-imap
pkgver=v4.18.0
pkgrel=0
pkgdesc="Courier IMAP"
url="http://www.courier-mta.org/"
arch="x86_64"
license="BSD"
depends="courier-authlib courier-unicode"
depends_dev="courier-authlib courier-unicode db-dev"
makedepends="$depends_dev"
install=""
subpackages=""
builddir="$srcdir/$pkgname-$pkgver"

prepare() {
	mkdir -p "$builddir"
	cd "$builddir"
	
	curl -L https://sourceforge.net/projects/courier/files/imap/4.18.0/courier-imap-4.18.0.tar.bz2/download | tar -xjf -
}

build() {
	cd "$builddir"
	cd courier-imap-4.18.0
	./configure --prefix=/usr --with-waitfunc=wait
	make -j16
}

check() {
	cd "$builddir"
}

dev() {
	cd "$builddir"
}

postcheck() {
	cd "$builddir"
}

doc() {
	cd "$builddir"
}

trace_apk_deps() {
	cd "$builddir"
}

package() {
	cd "$builddir"
	cd courier-imap-4.18.0
	make -j1 DESTDIR="$pkgdir" install
}

