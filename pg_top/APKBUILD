# Contributor: BARON David <db@crea.mn>
# Maintainer: BARON David <db@crea.mn>
pkgname=pg_top
pkgver=v3.7.0
pkgrel=1
pkgdesc="pg_top - top for PgSQL"
url="https://github.com/markwkm/pg_top"
arch="x86_64"
license="GPLv2"
depends="libpq"
depends_dev="postgresql-dev ncurses-dev git autoconf automake"
makedepends="$depends_dev"
install=""
subpackages=""
builddir="$srcdir/$pkgname-$pkgver"

prepare() {
	cp patch-34acab4.p1 "$srcdir"
	cd "$srcdir"
	echo "Cloning ..."
	git clone -q -b $pkgver https://github.com/markwkm/pg_top $pkgname-$pkgver 2>/dev/null || return 1
}

build() {
	cd "$builddir"
	git apply "$srcdir"/patch-34acab4.p1
	autoreconf -i
	autoconf
	automake
	./configure --prefix=/usr
	make -j8
}

check() {
	cd "$builddir"
}

dev() {
	cd "$builddir"
}

doc() {
	cd "$builddir"
}

package() {
	cd "$builddir"
	strip pg_top
	install -d "$pkgdir"/usr/bin || return 1
	install pg_top "$pkgdir"/usr/bin/pg_top || return 1
}

