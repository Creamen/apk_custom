# Contributor: BARON David <db@crea.mn>
# Maintainer: BARON David <db@crea.mn>
pkgname=postgresql-gotty
pkgver=10.9.6
_v96=9.6.10
_v10=10.5
_v11=11.$(date '+%Y%m%d')
pkgrel=668
pkgdesc="PostgreSQL 9 / 10 / v11-master for goTTY"
url="https://www.postgresql.org"
arch="x86_64"
license="PostgreSQL"
depends="tzdata"
depends_dev="libressl-dev openldap-dev libxml2-dev libxslt-dev readline-dev icu-dev util-linux-dev libedit-dev zlib-dev bison flex libintl llvm5-dev clang"
makedepends="$depends_dev"
install=""
subpackages=""
builddir="$srcdir/postgresql"

prepare() {
	cd "$srcdir"
	for v in ${_v96} ${_v10}; do
		curl -Ls https://ftp.postgresql.org/pub/source/v$v/postgresql-$v.tar.bz2 | tar -xjf -
	done
	git clone --single-branch -b master https://git.postgresql.org/git/postgresql.git postgresql-${_v11}
	cd ../patches
	ln -sf patch_disable_exec_shell_master.p0 patch_disable_exec_shell_${_v11}.p0
}

build() {
	for v in ${_v96} ${_v10} ${_v11}; do
		cd "$builddir-$v"
		patch -p0 < ../../patches/patch_disable_exec_shell_$v.p0
		export CFLAGS="-O3 -march=native"
		export CPPFLAGS="-O3 -march=native"
		./configure                                                	\
			--prefix=/usr/postgresql-$v				\
			--with-libedit-preferred				\
			--with-system-tzdata=/usr/share/zoneinfo		\
			--with-ldap                                             \
			--with-openssl                                          \
			--with-uuid=e2fs                                        \
			--with-libxml                                           \
			--with-libxslt                                          \
			--with-llvm

		# Ugly hack to force header generation
		make -C src/backend/ generated-headers

		make -j16
	done
}

check() {
	cd "$srcdir"
}

dev() {
	cd "$srcdir"
}

doc() {
	cd "$srcdir"
}

package() {
	for v in ${_v96} ${_v10} ${_v11}; do
		cd "$builddir-$v"
		make DESTDIR="$pkgdir" install 
	done
}
