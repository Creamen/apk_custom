# Contributor: BARON David <db@crea.mn>
# Maintainer: BARON David <db@crea.mn>
pkgname=postgresql
pkgver=11.0_git$(date '+%Y%m%d')
pkgrel=0
pkgdesc="PostgreSQL"
url="https://www.postgresql.org"
arch="x86_64"
license="PostgreSQL"
depends="tzdata perl"
depends_dev="libressl-dev openldap-dev libxml2-dev libxslt-dev readline-dev icu-dev util-linux-dev libedit-dev zlib-dev bison flex libintl llvm5-dev clang"
makedepends="$depends_dev"
install=""
subpackages=""
builddir="$srcdir/$pkgname-$pkgver"

prepare() {
	cd "$srcdir"
	git clone --single-branch -b master https://git.postgresql.org/git/postgresql.git $pkgname-$pkgver
}

build() {
	cd "$builddir"
	export CFLAGS="-O3 -march=native"
	export CPPFLAGS="-O3 -march=native"

	./configure                                                	\
		--prefix=/usr						\
		--with-llvm						\
		--with-libedit-preferred				\
		--with-system-tzdata=/usr/share/zoneinfo		\
		--with-ldap                                             \
		--with-openssl                                          \
		--with-uuid=e2fs                                        \
		--with-libxml                                           \
		--with-libxslt                                          

	# Ugly hack to force header generation
	make -C src/backend/ generated-headers
	make -j16
}

check() {
	cd "$builddir"
}

dev() {
	cd "$builddir"
}

doc() {
	cd "$builddir"
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install 
}

