# Contributor: BARON David <db@crea.mn>
# Maintainer: BARON David <db@crea.mn>
pkgname=pgbouncer
pkgver=1.9.0
pkgrel=666
pkgdesc="PgBouncer"
url="https://github.com/pgbouncer/pgbouncer"
arch="x86_64"
license="ISC License"
depends=""
depends_dev="libressl-dev postgresql-dev libevent-dev"
makedepends="$depends_dev"
install=""
subpackages=""
#builddir=$srcdir/
# or 
builddir="$srcdir/$pkgname-$pkgver"

prepare() {
	cp *.p1 "$srcdir/"
	cd "$srcdir/"
	curl -sL https://github.com/pgbouncer/pgbouncer/releases/download/pgbouncer_1_9_0/pgbouncer-${pkgver}.tar.gz | tar -xzf -
}

build() {
	cd "$builddir/"
	patch -p1 < ../const_free.p1
	export CFLAGS="-O3 -flto"
	./configure --prefix=/usr
	make -j8
}

check() {
	cd "$srcdir/"
}

dev() {
	cd "$srcdir/"
}

doc() {
	cd "$srcdir/"
}

package() {
	cd "$builddir/"
	make DESTDIR="$pkgdir/" install
	find "$pkgdir/usr/share/man/" -type f | xargs gzip -9
}

