# Contributor: BARON David <db@crea.mn>
# Maintainer: BARON David <db@crea.mn>
pkgname=weechat
pkgver=2.2
pkgrel=666
pkgdesc="WeeChat - The extensible chat client"
url="https://weechat.org/"
arch="x86_64"
license="BSD"
depends=""
depends_dev=""
makedepends="gnutls-dev libgcrypt-dev cmake ncurses-dev zlib-dev aspell-dev curl-dev ncurses5-widec-libs"
install=""
subpackages=""
builddir="$srcdir/$pkgname-$pkgver"

prepare() {
	cd "$srcdir/"
	curl -Ls https://weechat.org/files/src/weechat-$pkgver.tar.xz | tar -xJf -
}

build() {
	cd "$builddir/"
	mkdir build
	cd build
	cmake .. -DCMAKE_INSTALL_PREFIX=/usr
	make -j16
}

check() {
	cd "$srcdir/"
}

dev() {
	cd "$srcdir/"
}

doc() {
	cd "$srcdir/"
}

package() {
	cd "$builddir/build"
	make DESTDIR="$pkgdir/" install
}

