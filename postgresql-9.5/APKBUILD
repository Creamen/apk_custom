# Contributor: BARON David <db@crea.mn>
# Maintainer: BARON David <db@crea.mn>
pkgname=postgresql
pkgver=9.5.14
pkgrel=666
pkgdesc="PostgreSQL"
url="https://www.postgresql.org"
arch="x86_64"
license="PostgreSQL"
depends="tzdata perl"
depends_dev="libressl-dev openldap-dev libxml2-dev libxslt-dev readline-dev icu-dev util-linux-dev libedit-dev zlib-dev bison flex libintl"
makedepends="$depends_dev"
install=""
subpackages=""
builddir="$srcdir/$pkgname-$pkgver"
options="!strip"

prepare() {
	cd "$srcdir"
	curl -Ls https://ftp.postgresql.org/pub/source/v${pkgver}/postgresql-${pkgver}.tar.bz2 | tar -xjf -
}

build() {
	cd "$builddir"
	export CFLAGS="-O3"
	export CPPFLAGS="-O3"
	./configure                                                	\
		--prefix=/usr						\
		--with-libedit-preferred				\
		--with-system-tzdata=/usr/share/zoneinfo		\
		--with-ldap                                             \
		--with-openssl                                          \
		--with-uuid=e2fs                                        \
		--with-libxml                                           \
		--with-libxslt                                          

	make -j16
}

check() {
	cd "$builddir"
}

dev() {
	cd "$builddir"
}

doc() {
	cd "$builddir"
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install 
	find $pkgdir -type f -perm +100 -exec upx -9 {} \;
}

