pkgname="rtorrent"
pkgver=0.9.6
pkgrel=666
pkgdesc="rTorrent"
url="https://rtorrent.net"
arch="x86_64"
license="MIT"
depends=""
depends_dev="zlib-dev curl-dev ncurses-dev libtorrent>=r0.13.6-r666"
makedepends="$depends_dev"
install=""
subpackages=""
builddir="$srcdir/$pkgname-$pkgver"

prepare() {
	cd $srcdir
	curl -Ls http://rtorrent.net/downloads/rtorrent-0.9.6.tar.gz | tar -xzf -
}

build() {
	cd $srcdir
	cd rtorrent-0.9.6
	CPPFLAGS="-O3 -march=native" CFLAGS="-O3 -march=native" ./configure --prefix=/usr
	make -j16
}

check() {
	cd $srcdir
}

dev() {
	cd $srcdir
}

doc() {
	cd $srcdir
}

package() {
	cd $srcdir
	cd rtorrent-0.9.6
	make DESTDIR="$pkgdir/" install
}

